<form>
  <% @accessibility_features.each do |feature| %>
    <div class="form-check">
      <input type="checkbox" id="" name="feature<%= feature.id %>" value="1" />
      <label for="<% feature %>"><%= feature.feature %></label>
    </div>
  <% end %>
  <input name="commit" type="submit" value="Submit Preferences" data-disable-with="Search" />
</form>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
