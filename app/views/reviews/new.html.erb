<% content_for :meta_title, "Adept | Write a review for #{@venue.name}!" %>
<div class="container py-5 px-4">
  <div class="d-flex justify-content-between align-items-center">
      <%= link_to :back do %>
        <i class="fa-solid fa-fw fa-arrow-left"></i> Back
      <% end %>
    <h2><%= @venue.name %></h2>
    <div></div>
  </div>
  <div class="py-3">
    <%= simple_form_for [@venue, @review] do |f| %>
      <%= f.input :rating, collection: 1..5, selected: 5, input_html: {data: {controller: "star-rating"}} %>
      <%= f.input :content, as: :text %>
      <%= f.input :photos, as: :file %>
      <%= f.submit "Submit review", class: "btn adept-btn text-center" %>
    <% end %>
  </div>
</div>
