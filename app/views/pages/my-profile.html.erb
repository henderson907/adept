<div class="cover">
  <div>
    <h1>My Profile</h1>
  </div>
</div>
<% flash.now[:notice] = params[:flash_notice] if params[:flash_notice] %>
<div class="text-container mt-4 mb-4">
  <div><h3>My venues</h3></div>
  <div class="row">
    <div class="col index-col">
      <% @venues.each do |venue| %>
        <%= link_to venue_path(venue), class:"link" do %>
          <div class="venue-card">
              <%= cl_image_tag venue.photo.key, height: 400, width: 400, class: 'card-img-top', crop: :fill %>
            <div class="card-body">
              <div class="venue-description name">
                <%= venue.name %>
              </div>
            </div>
            <div class="card-footer">
              <%= venue.address %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
