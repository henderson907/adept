<div class="container">
  <h2>Log in</h2>
<div class="sign-up-form col-12">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                style: "border: none; background-color: white; border-bottom: 1px solid blue;"
                      %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } ,
                style: "border: none; background-color: yellow !important; border-bottom: 1px solid blue;"
                      %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions form-actions btn btn-primary">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<p>Remember me</p>
